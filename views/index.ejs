  <form action="/add" method="post">
  <tr>
    <td><input class="form-control" type="text" name="ip" ></td>
    <td><input class="form-control" type="text" name="localname"></td>
    <td><input class="form-control" type="text" name="domain"></td>
  </tr>

</table>
<div class="input-group mb-3 d-flex justify-content-end" >
    <div id="k" class="d-nonejustify-content-end" >
    <input type="text" class="form-control-l "  placeholder="Username"  style="margin-top:10px; " aria-label="Username" name="username">
    <input type="text" class="form-control-l" placeholder="Password"  style="margin-top:10px; " aria-label="Password" name="password">
    </div>
    <button type="button" class="btn btn-secondary" onclick="hide_show()" style="margin:5px; ">Credentials</button>
    <button type="submit"  class="btn btn-success" style="margin:5px; ">Add</button>
   
  </div>


</div>
</form>
</div>


  

  <!-- Modal -->

  <script src="/js/sidebars.js"></script>
    
